<h2 id="title">Specials</h2>

<% if @specials.empty? %>
		<% unless logged_in? %>
		 <h2> Coming soon... </h2>
		<%- else -%>
		<div class="warning ">	
			<h2>There are no specials in the database</h2>
			<p>Start by adding a special</p>
			<p><%= link_to "Add new special", new_special_path %></p>		
		</div>
		<% end -%>
	
<% else %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Service</th>
    <th>Price</th>
  </tr>

<% @specials.each do |special| %>
  <tr>
    <td><%=h special.title %></td>
    <td><%=h special.description %></td>
    <td><%=h special.start_date %></td>
    <td><%=h special.end_date %></td>
    <td><%=h special.service.name %></td>
    <td><%=h special.price %></td>
    <td><%= link_to 'Show', special %></td>
    <td><%= link_to 'Edit', edit_special_path(special) %></td>
    <td><%= link_to 'Destroy', special, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
	<% unless @specials.empty? %>
	<%= link_to 'New special', new_special_path %>
	<% end -%>
<% end -%>