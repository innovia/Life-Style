<div class="pages_wrapper">
<h2 id="title"> Edit <%= @stylist.full_name.camelize %>'s Details </h2>
<%= error_messages_for :stylist %>
<%form_for(:stylist, :url => stylist_url, :html => {:multipart => true, :method => :put}) do |f| -%>
	<%= render :partial => 'form', :locals => {:f => f }%>
	<%= f.submit "Save Changes" %>
	<%= link_to "go back to Stylists", stylists_url %>
<% end -%>

<%= render :partial => 'shared/load_yui_editor_files' %>
</div>
<script type="text/javascript" charset="utf-8">
	var editor = new YAHOO.widget.Editor('page_editor', {
	  height: '200px', 
		width: '600px', 
		animate: true,  
		handleSubmit: true
	});
	editor._defaultToolbar.titlebar = false;
	editor._defaultToolbar.buttonType = 'advanced'
	editor.render();
</script>