<div class="pages_wrapper">
<h2 id="title">Add a new stylist</h2>
<% form_for(:stylist, :html => {:multipart => true}, :url => stylists_url) do |f| -%>
	<%= render :partial => 'form', :locals => {:f => f }%>
	<%= f.submit "Add Stylist" %> 
	<%= link_to "go back to Stylists", stylists_url %>
<% end -%>
</div>
<%= render :partial => 'shared/load_yui_editor_files' %>
<script type="text/javascript" charset="utf-8">
	var editor = new YAHOO.widget.Editor('page_editor', {
	  height: '200px', 
		width: '600px', 
		animate: true,  
		handleSubmit: true
	});
	editor._defaultToolbar.titlebar = false;
	editor._defaultToolbar.buttonType = 'advanced'
	editor.render();
</script>