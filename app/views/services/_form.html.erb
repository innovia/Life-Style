	<div class="prepend-1">
		<div>
		<% if @categories.empty? %>
				<%= link_to "Catgory", new_category_path %>
		<% else %>
			<%= f.label :category, "Category:" %>
			<%= f.select(:category_id, @categories.collect	{ |c| [c.name, c.id] }, :tabindex => 0) %>
		<% end -%>
		</div>
		
		<div>
	  <label class="desc" for="service_name">Name:
	  	<span class="req">*</span>
	  </label>
		<%= f.text_field :name, :tabindex => 1 %>
		
		
		
		</div>
		
		<table id="stylist_levels">
			<tr>
			<th>Stylist Level</th>
			<th>Start Price</th>
			<th>End Price</th>
			</tr>
			<tr>
				<td>Beginner</td>
				<td>$ <%= f.text_field :beginner_start_price, :size => 6, :maxlength => 3, :tabindex => 2 %></td>
				<td>$ <%= f.text_field :beginner_end_price, :size => 6, :maxlength => 3, :tabindex => 3 %></td>
			</tr>
			<tr>
				<td>Intermidiate</td>
				<td>$ <%= f.text_field :intermidiate_start_price, :size => 6, :maxlength => 3, :tabindex => 4 %></td>
				<td>$ <%= f.text_field :intermidiate_end_price, :size => 6, :maxlength => 3, :tabindex => 5 %></td>
			</tr>
			<tr>
				<td>Senior</td>
				<td>$ <%= f.text_field :senior_start_price, :size => 6, :maxlength => 3, :tabindex => 6 %></td>
				<td>$ <%= f.text_field :senior_end_price, :size => 6, :maxlength => 3, :tabindex => 7 %></td>
			</tr>
		</table>
</div>