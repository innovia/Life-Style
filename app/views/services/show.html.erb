<div class="prepend-1">
	<h2 id="title"><%= @service.category.name.upcase %></h3>
	<h3><%= @service.name %></h3>
<table id="stylist_levels">
	<tr>
	<th>Stylist Level</th>
	<th>Start Price</th>
	<th>End Price</th>
	</tr>
	<tr>
		<td>Stylist</td>
		<td><%= @service.stylist_start_price.nil? ? 'Not Set' : number_to_currency(@service.stylist_start_price, :precision => 0) %> </td>
		<td>
		<% unless @service.stylist_start_price.nil? %>
		<%= @service.stylist_end_price.nil? ? '& up' : number_to_currency(@service.stylist_end_price, :precision => 0)  %> </td>
		<% end -%>
	</tr>
	<tr>
		<td>Senior</td>
		<td><%= @service.senior_start_price.nil? ? 'Not Set' : number_to_currency(@service.senior_start_price, :precision => 0) %> </td>
		<td>
		<% unless @service.senior_start_price.nil? %>
		<%= @service.senior_end_price.nil? ? '& up' : number_to_currency(@service.senior_end_price, :precision => 0)  %> </td>
		<% end -%>
	</tr>
	<tr>
		<td>Master</td>
		<td><%= @service.master_start_price.nil? ? 'Not Set' : number_to_currency(@service.master_start_price, :precision => 0) %> </td>
		<td>
		<% unless @service.master_start_price.nil? %>
		<%= @service.master_end_price.nil? ? '& up' : number_to_currency(@service.master_end_price, :precision => 0) %>
		<% end -%>
		</td>
	</tr>
</table>


<p>
<%= link_to "Edit", edit_service_path(@service) %> |
<%= link_to "<< Services", services_path %>
</p></div>