<div class="prepend-1">
	<h2 id="title"><%=h @schedules.first.stylist.full_name %>'s Schedule Summary</h2>
	<table>
  <tr>
    <th>Day</th>
    <th>From</th>
    <th>To</th>
  </tr>
<% unless @schedules.blank? %>
  <% for schedule in @schedules %>
   	    <tr>
		      <td><%=h schedule.day %></td>
		      <td><%=h schedule.start_time.strftime("%H:%M") %></td>
		      <td><%=h schedule.end_time.strftime("%H:%M") %></td>
		      <td><%= link_to "Edit", edit_schedule_path(schedule) %></td>
		      <td><%= link_to "Delete", schedule, :confirm => 'Are you sure?', :method => :delete %></td>
		    </tr>
	<% end %>
</table>
<% else %>
 no schedules yet  
<% end %>


</div>