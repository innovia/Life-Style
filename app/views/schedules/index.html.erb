<div class="prepend-1">
	<h2 id="title">Stylists schedule</h2>
  <% unless @schedules.empty? or @schedules.nil? %>
	<table>
  <tr>
    <th>Stylist</th>
    <th>Day</th>
    <th>From</th>
    <th>To</th>
  </tr>
	<% for schedule in @schedules %>
    <tr>
      <td><%= link_to schedule.stylist.full_name, stylist_schedule_path(schedule.stylist, schedule)  %></td>
      <td><%=h schedule.day %></td>
      <td><%=h schedule.start_time.strftime("%H:%M") %></td>
      <td><%=h schedule.end_time.strftime("%H:%M") %></td>
      <td><%= link_to "Edit", edit_schedule_path(schedule) %></td>
      <td><%= link_to "Delete", schedule, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<p><%= link_to "New Schedule", new_schedule_path %></p>
<%- else -%>
<div class="warning">	

	<% unless  @stylist.nil? %>
		<h2><%= @stylist.full_name.capitalize %> does not have a schedule set.</h2>
		<p><%= link_to "Set a schedule for #{@stylist.full_name}", new_stylist_schedule_path(@stylist) %></p>		
	<%- else -%>
		<h2>There are no schedules set for any stylist yet.</h2>
		<p><%= link_to "Set a schedule", new_schedule_path %></p>		
	<% end -%>
	
</div>
<% end -%>
</div>