<!DOCTYPE html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<title>LifeStyle Salon NYC - 822 BroadWay (212) 228-5577</title>

<%=  javascript_include_tag "jquery-1.4.2.min","jquery-ui-1.8.4.custom.min", "jquery.tools.min", "application"  %>

<%# if ['appointments', 'appointments_ie', 'contact_us'].include?(controller.action_name) %>
	<%#= javascript_include_tag "jquery.maskedinput.min", "jquery.validate.min" %>
	<%#= stylesheet_link_tag "themes/redmond/jquery-ui-1.8.4.custom"%>
<%# end -%>


<% if ["pages", "stylists", "products"].include?(controller_name) %>
	<% unless ['appointments', 'pages_manager', 'appointments_ie'].include?(controller.action_name) %>
		<% unless current_user.nil? %>		
			<%= render :partial => "shared/init_yui_editor" %>
		<% end -%>
	<%- end -%>
<%- end -%>

<%= stylesheet_link_tag "blueprint/src/reset", :media => "screen, projection" %>
<%= stylesheet_link_tag "blueprint/screen", :media => "screen, projection" %>
<%= stylesheet_link_tag "blueprint/print", :media => "print" %>
<%= stylesheet_link_tag "application", "boxed", "services", "stylists", "products", "pictures" %>

<!--[if IE]>
	<link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection"/>
	<link href="/iemarginfix/marginfix-styles.css" rel="stylesheet" type="text/css">
	<script src="/iemarginfix/src/IEmarginFix.js" type="text/javascript"></script>
<![endif]-->

<!-- set the current tab css by header class -->	
	<% if controller_name == "pages" 
				@class = controller.action_name
			 else
				@class = controller_name
			 end
	%>
	
</head>
	
<body>
		<div class="container">
		  <div id="header" class="span-23 last <%= @class %>">
				<ul id="navbar">
					<li id="home"><%= link_to "Home", root_path, :class => "home" %></li>
					<li id="services"><%= link_to "Services", services_path %></li>
					<li id="stylists"><%= link_to "Stylists", stylists_path %></li>
					<li id="products"><%= link_to "Products", products_path %></li>
					<li	id="pictures"><%= link_to "Gallery",  pictures_path %></li>
					<li id="about_us"><%= link_to "About us", about_us_path %></li>
					<li id="location"><%= link_to "Location", location_path %></li>
				</ul>
			</div>
			
			<div id="stage" class="span-23 last">
				
			<div id="side_links_container" class="span-1 last">
				<ul id="side_links">
				<li id="brazilian"><%= link_to "Brazilian_Keratin", keratin_path %> </li>
				<li id="specials"><%= link_to "Specials", specials_path %></li>
				<li id="appointments"><%= link_to "Appointment", appointments_path %></li>
				<li id="contact"><%= link_to "Contact_us", contact_us_path %></li>
			</ul></div>
				
				<div id="left_col" class="span-19 last">
				
				<div id="admin_menu_container">
					<% unless current_user.nil? %>		
					<ul id="admin_menu_bar" class="span-14 prepend-1">
					   <li>Logged in as: <%= current_user.login %> </li>
					 	 <li>| <%= link_to 'Log out', logout_url %> </li>
						 <% if controller_name == "pages" %>
						 	<li>| <%= link_to "Edit/Show Page", "#", :id => "edit_page"  %> </li>
						 <% end %>
						 <li>| <%= link_to "Pages Manager", manager_path %></li>
						 <li>| <%= link_to "Service Categories", categories_path %></li>
						 <li>| <%= link_to "Stylists schedules", schedules_path %></li>
						 <% if controller_name == "pictures" %>
						 <li>| <%= link_to "New gallery picture", new_picture_path  %> </li>
						 <li>| <%= link_to "Gallery Manager", gallery_manager_path  %> </li>	
						 <% end %>					
							| version 1.2		
					</ul>
					<% end %> 
				</div>
				
				<div id="image_on_stage" class="span-18">
					
					<div id="see_through_box">
						<div id="inner_content" class="span-17">
							<%- unless flash[:notice].blank? -%>
							<div class="notification">
								<h3><%= flash[:notice] -%></h3>
							</div>
							<%- end -%>

							<%- unless flash[:error].blank? -%>
							<div class="flash_error">
								<h3><%= flash[:error] -%></h3>
							</div>
							<%- end -%>
							<%= yield %>
						</div>
					</div> <!-- /see through -->
				</div> <!-- /image on stage -->
				<div id="phone" class="footer">212-228-5577</div>
				<div id="follow_us">
					Follow us on <%= link_to image_tag('facebook-icon.png') + " FaceBook","http://www.facebook.com/pages/#/pages/New-York-NY/LifestyleSalonNYC/267898145854?ref=ts" %>
					<%= link_to image_tag('twitter-icon.png') + " Twitter","http://twitter.com/LifestyleSalon" %>
				</div>
				<div id="address" class="footer"> 822 Broadway - New York, NY 10003</div>
				</div><!-- /left col -->
				
				<div id="right_col" class="span-3 last">
					<div id="logo"></div>					
				</div>	
			</div> <!-- /stage -->
			<span id="copy">Copyright © <%= Date.today.strftime('%Y') %>  LifeStyle Salon NYC. All rights reserved.</spanid="copy">
		</div>	<!-- /container -->	
		
	<script>
		    $(function () {
				$(window).load(function() {
					$('#image_on_stage').removeClass('loading');
					$('#image_on_stage').css('background', "url('<%= @bkg %>') no-repeat");
					$('#see_through_box').fadeIn("slow");			
					});							 
			});		
	</script>	
		
		
	<% if ["pages", "stylists", "products"].include?(controller_name)%>
			<% unless  ['appointments', 'pages_manager', 'appointments_ie'].include?(controller.action_name) %>
				<% unless current_user.nil? %>
					<%= render :partial => "shared/call_yui_editor" %>
				<% end -%>				
			<%- end -%>						
	<%- end -%>						
</body>
</html>